<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <div class="round">
    <%= f.text_field :name, :class => 'input-styling' %>
    </div>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :class => 'input-styling' %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :class => 'input-styling' %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation, :class => 'input-styling' %>
  </div>
  <div class="actions">
    <%= f.submit "Update", :class => ' base-button' %>
  </div>
<% end %>
<br/>
<div>
  <%= gravatar_for @user %><br/><br/>
  <a href="http://gravatar.com/emails" class = "base-button">Change Picture</a>
</div>