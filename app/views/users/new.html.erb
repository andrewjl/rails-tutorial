<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class = "field">
		<%= f.label :name %> <br />
		<%= f.text_field :name, :class => 'input-styling' %>
	</div>
	<div class = "field">
		<%= f.label :email %> <br />
		<%= f.text_field :email, :class => 'input-styling' %>
	</div>
	<div class = "field">
		<%= f.label :password %> <br />
		<%= f.password_field :password, :class => 'input-styling' %>
	</div>
	<div class = "field">
		<%= f.label :password_confirmation, "Confirmation" %> <br />
		<%= f.password_field :password_confirmation, :class => 'input-styling' %>
	</div>
	<div class = "actions" >
		<%= f.submit "Sign up", :class => 'base-button' %>
	</div>
<% end %>
