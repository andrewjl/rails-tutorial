<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="micropost">What's up?</h1>
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
      </td>
    </tr>
  </table>
<% else %>
  <!-- <h1>Candy Factory</h1> -->

  <p>
    This is the home page for the
    <a href="http://railstutorial.org/">Amazing Micropost App</a>
    that will brighten your day.
  </p>

  <%= link_to "Start Posting!", signup_path, :class => "signup_button round" %>
<% end %>